<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:orientation="vertical"
    tools:context=".ui.screen.DeviceScanFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/indent_middle"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/item_list" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/indent_large"
        android:orientation="horizontal"
        android:background="@color/color_progress_bk"
        >
        <TextView
            android:id="@+id/textScanning"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/scanning"
            android:textStyle="bold"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:visibility="visible"
            />
        <Button
            android:id="@+id/buttonScanControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/scan"
            android:drawableEnd="@null"
            />
        <ProgressBar
            android:id="@+id/progressScanning"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="@dimen/indent_small"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:visibility="visible"
            />
    </LinearLayout>
</LinearLayout>